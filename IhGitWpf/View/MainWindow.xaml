                                                          FillRule="Nonzero" />
                                                </Path.Data>
                                            </Path>
                                        </Canvas>
                                    </Viewbox>
                                </Button.Content>
                            </Button>
                            <Button Command="{Binding OpenGithubCommand}"
                            Margin="8 0" ToolTip="Open Github"
                            Content="{materialDesign:PackIcon Github}" />
                            <Button Command="{Binding ClearUiCommand}"
                            Content="{materialDesign:PackIcon Delete}" ToolTip="Clear inputs"
                            Margin="8 0">
                                <Button.CommandParameter>
                                    <s:Boolean>True</s:Boolean>
                                </Button.CommandParameter>
                            </Button>

                        </StackPanel>

                        <TextBox VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Title"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding Title}"/>

                        <TextBox Height="100"
                         VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Description"
                         AcceptsReturn="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding Body}"
                         Margin="0 8" />

                        <TextBox VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Feature Name"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding FeatureName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                Grid.Column="0"
                                Grid.Row="2"
                                Margin="0,12,0,0">
                        <ItemsControl Grid.IsSharedSizeScope="True"
                                      ItemsSource="{Binding Commits}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:Commit}">
                                    <Border x:Name="Border" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <CheckBox VerticalAlignment="Center"
                                                              IsChecked="{Binding IsSelected}"
                                                              ToolTip="{Binding Value.Commit.Message}"
                                                              Grid.IsSharedSizeScope="True">
                                                <Grid Margin="8,0,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"
                                                        SharedSizeGroup="A" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock x:Name="a"
                                                               Grid.Row="0"
                                                               FontWeight="Bold"
                                                               Text="{Binding Value.Sha}" />
                                                    <TextBlock Grid.Row="1"
                                                               Width="{Binding ElementName=a, Path=ActualWidth}"
                                                               Text="{Binding Title}"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Value.Commit.Message}" />
                                                </Grid>
                                            </CheckBox>
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}"
                                                    Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="{DynamicResource MaterialDesignSelection}" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="0 0 4 0"
                            BorderThickness="2"
                            BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}"
                            Visibility="{Binding Reviewers.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox VerticalAlignment="Center"
                                     Margin="12 8"
                                     Grid.Row="0"
                                     materialDesign:HintAssist.Hint="Filter Reviewer"
                                     Style="{StaticResource MaterialDesignTextBox}"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Text="{Binding ReviewerFilter, UpdateSourceTrigger=PropertyChanged}" />
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Margin="12 0"
                                          Grid.Row="1"
                                          MinHeight="120">
                                <ItemsControl Grid.IsSharedSizeScope="True"
                                              ItemsSource="{Binding Reviewers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type vm:Reviewer}">
                                            <Border x:Name="Border" Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox VerticalAlignment="Center"
                                                                              IsChecked="{Binding IsSelected}"
                                                                              Grid.IsSharedSizeScope="True">
                                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontWeight="Bold"
                                                                        Text="{Binding .}" />
                                                        </Grid>
                                                    </CheckBox>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}"
                                                            Value="True">
                                                    <Setter TargetName="Border"
                                                            Property="Background"
                                                            Value="{DynamicResource MaterialDesignSelection}" />
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BorderThickness="2"
                            Margin="4 0 0 0"
                            BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}"
                            Visibility="{Binding Labels.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox VerticalAlignment="Center"
                                     Margin="12 8"
                                     Grid.Row="0"
                                     materialDesign:HintAssist.Hint="Filter Label"
                                     Style="{StaticResource MaterialDesignTextBox}"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Text="{Binding LabelFilter, UpdateSourceTrigger=PropertyChanged}" />
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Margin="12 0"
                                          Grid.Row="1"
                                          MinHeight="120">
                                <ItemsControl Grid.IsSharedSizeScope="True"
                                            ItemsSource="{Binding Labels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type vm:Label}">
                                            <Border x:Name="Border"
                                                    Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox VerticalAlignment="Center"
                                                                          IsChecked="{Binding IsSelected}"
                                                                          Grid.IsSharedSizeScope="True">
                                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontWeight="Bold"
                                                                    Text="{Binding .}" />
                                                        </Grid>
                                                    </CheckBox>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}"
                                                            Value="True">
                                                    <Setter TargetName="Border"
                                                            Property="Background"
                                                            Value="{DynamicResource MaterialDesignSelection}" />
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Button Grid.Column="0"
                            Grid.Row="1"
                            Command="{Binding UpMergeCommand}"
                            Margin="0 16 4 8"
                            Content="{materialDesign:PackIcon ArrowUp}"
                            ToolTip="Perform upmerge" />
                    <controls:BranchSelect Grid.Column="0"
                                           Grid.Row="2"
                                           Versions="{Binding Path=UpMergeVersions}" />

                    <Button Grid.Column="1"
                            Grid.Row="1"
                            Command="{Binding DownMergeCommand}"
                            Margin="4 16 0 8"
                            Content="{materialDesign:PackIcon ArrowDown}"
                            ToolTip="Perform downmerge" />
                    <controls:BranchSelect Grid.Column="1"
                                           Grid.Row="2"
                                           Versions="{Binding DownMergeVersions}" />
                </Grid>

                

                <Expander Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                          Margin="0,16,0,0"
                          Header="Logs">
                    <Border BorderThickness="2"
                            BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="0"
                                      ItemsSource="{Binding Logs}"
                                      Height="220">
                                <behavior:Interaction.Behaviors>
                                    <local:ScrollToBehavior ScrollMode="Bottom"
                                                            Enabled="True" />
                                </behavior:Interaction.Behaviors>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem"
                                           BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                        <Setter Property="Padding"
                                                Value="2" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Grid.Row="1"
                                    Command="{Binding ClearLogsCommand}"
                                    Content="Clear Logs" />
                        </Grid>
                    </Border>
                </Expander>
            </Grid>
        </TabItem>
        <TabItem Header="Settings">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <PasswordBox Grid.Row="0"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Margin="0,0,0,16"
                             VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="GitHub Token"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:PasswordBoxAssist.Password="{Binding GitHubToken, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Margin="0,0,16,16"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Username"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <PasswordBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="0,0,0,16"
                             VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="Password"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:PasswordBoxAssist.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <TextBox Grid.Row="2"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="0,0,0,16"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Repo Path"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding RepoPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <StackPanel Grid.Row="3" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="2" 
                            Orientation="Horizontal">
                    <TextBlock Text="Oldest Supported Version"
                               Margin="0,0,16,0"
                               VerticalAlignment="Center" />
                    <local:NumericTextBox VerticalAlignment="Center"
                                          Margin="0,0,16,0"
                                          materialDesign:HintAssist.Hint="Major"
                                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                          Text="{Binding MinSupportMajorVersion, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    <local:NumericTextBox VerticalAlignment="Center"
                                          materialDesign:HintAssist.Hint="Minor"
                                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                          Text="{Binding MinSupportMinorVersion, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
